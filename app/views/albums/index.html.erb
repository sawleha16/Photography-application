<% if user_signed_in? %>
  <h1>Hello, <%= current_user.username.capitalize %> </h1>
  <h1>Welcome to 500px </h1>
<% end %>

<h1> Albums: </h1>
<ul>
  <% @albums.each do |album| %>
    <li>
       <a href="/albums/<%= album.id %>">
        <%= album.name %>
       </li>
  <% end %>
</ul>
<a href="/albums/new">Add new album</a>
